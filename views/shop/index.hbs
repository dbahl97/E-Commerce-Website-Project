<body>
{{#each products}}
<div class="row">
    {{#each this}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" class="img-responssive" alt="...">
      <div class="caption">
        <h3 class= "title">{{this.title}}</h3>
        <p class = "description">{{this.description}}</p>
        <div class= "clearfix">
            <div class = "price pull-left">Rs.{{this.price}}</div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary pull-right" role="button">Add to Cart</a></div>
      </div>
    </div>
  </div>
  {{/each}}
  </div>
{{/each}}

</body>